				<h1 class="font-weight-bold">Dashboard - {{classNum}} </h1>
			</div>

			<form id="attendance-form" method="POST" action="/recordAttendance">
				<div class="form-group col-4">
					<label for="exampleFormControlSelect1">Day of class</label>
					    <select class="form-control" name="exampleFormControlSelect1" id="day-select">
                        <option selected value="1">Class 1 - January 6, 2019</option>
                                <option value="2">Class 2 - March 13, 2019</option>
                                <option value="3">Class 3 - March 20, 2019</option>
                                <option value="4">Class 4 - March 27, 2019</option>
                                <option value="5">Class 5 - March 3, 2019</option>
                                <option value="6">Class 6 - March 10, 2019</option>
                                <option value="7">Class 7 - March 17, 2019</option>
                                <option value="8">Class 8 - March 24, 2019</option>
                                <option value="9">Class 9 - March 2, 2019</option>
                                <option value="10">Class 10 - March 9, 2019</option>
                                <option value="11">Class 11 - March 16, 2019</option>
                                <option value="12">Class 12 - March 23, 2019</option>
                    </select>
				</div>
				<div class="form-group">
					<div class="btn-group-toggle d-flex flex-wrap" data-toggle="buttons">
						<!--Templated Student Card-->
						{{#each gbda404Data}}
						<div class="col-lg-3 col-md-6 col-sm-8 py-3 ">

							<label for="{{this.name}}"
								class="card text-center card-bg rounded-xl py-1 btn btn-outline-warning text-dark">

								<input type="checkbox" id="{{this.name}}" name="{{this.name}}" value="{{this.name}}">
								<img src="images/peopleimg.svg" class="img-fluid rounded-circle card-img-top img-fluid w-75 p-2 mx-auto student-photo" 
									alt="..." />
								<div class="card-body">
									<h5 class="card-title">{{this.name}}</h5>
									<p class="card-text">{{this.studentNumber}}</p>
								</div>
							</label>
						</div>



						{{/each}}
					</div>
					<button type="submit" class="btn btn-primary mx-3 px-5" data-toggle="modal" data-target="#exampleModalCenter">Submit</button>

			</form>

		</div>
	</div>



