<div class="container min-vh-100">

	<div class="row">
		<div class="col-12">

			<div class="col-lg-12 my-4">

				<h1>Dashboard - GBDA 404 </h1>
			</div>

			<form id="attendance-form" method="POST" action="/recordAttendance">
				<div class="form-group col-4">
					<label for="exampleFormControlSelect1">Example select</label>
					<select class="form-control" name="exampleFormControlSelect1" id="exampleFormControlSelect1">
						<option>1</option>
						<option>2</option>
						<option>3</option>
						<option>4</option>
						<option>5</option>
					</select>
				</div>
				<div class="form-group">
					<div class="btn-group-toggle d-flex flex-wrap" data-toggle="buttons">
						<!--Templated Student Card-->
						{{#each gbda404Data}}
						<div class="col-lg-4 col-md-6 col-sm-8 py-3 ">

							<label for="{{this.name}}"
								class="card text-center card-bg rounded-xl py-1 btn btn-outline-warning text-dark">
								<input type="checkbox" id={{this.name}}  name="{{this.name}}" value="{{this.name}}">
								<img src="images/peopleimg.svg" class="card-img-top img-fluid w-50 p-2 mx-auto"
									alt="..." />
								<div class="card-body">
									<h5 class="card-title">{{this.name}}</h5>
									<p class="card-text">{{this.attendanceRecord}}</p>
								</div>
							</label>
						</div>



						{{/each}}
					</div>
					<button type="submit" class="btn btn-primary mx-3 px-5">Submit</button>

			</form>

		</div>
	</div>



